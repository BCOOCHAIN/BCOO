[Unit]
Description=Bitconch Testnet Validator Node Service
After=network.target
StartLimitIntervalsec=0
Documentation=https://github.com/bitconch/bus

[Service]
Type=simple
User=root
ExecStart=/bin/bash -c "PATH=/usr/bin/bitconch:$PATH exec /usr/bin/bitconch/buffett/demo/validator-x.sh" 
WorkingDirectory=/usr/bin/bitconch/buffett/demo

[Install]
WantedBy=multi-user.target